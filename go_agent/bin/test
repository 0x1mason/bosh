#!/bin/bash
set -x
result=0

bin=$(dirname $0)

# Travis randomly kills go builds when using -race
race=$([ "$TRAVIS" != "true" ] && echo "-race")

echo -e "\n Formatting packages..."
$bin/go fmt bosh/...
let "result+=$?"

echo -e "\n Installing ginkgo..."
$bin/go install github.com/onsi/ginkgo/ginkgo
let "result+=$?"

ps aux

echo -e "\n Testing packages..."
GOMAXPROCS=2 $bin/env ginkgo -r $race $bin/../src/bosh
let "result+=$?"

echo -e "\n Vetting packages for potential issues..."
$bin/go vet bosh/...
let "result+=$?"

echo -e "\n Checking with golint..."
$bin/golint
let "result+=$?"

echo -e "\n Running build script to confirm everything compiles..."
$bin/build
let "result+=$?"

if [ $result -eq 0 ]; then
	echo -e "\nSUITE SUCCESS"
else
	echo -e "\nSUITE FAILURE"
fi

exit $result
